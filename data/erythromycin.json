  "importantNotes": [
    "Give on empty stomach: 1 hour before or 2 hours after meals",
    "Maximum single dose: 500 mg for children",
    "NEONATAL WARNING: Use ONLY for specific indications (Chlamydia, Pertussis) - strongly associated with infantile hypertrophic pyloric stenosis",
    "Do NOT use for routine neonatal pneumonia or sepsis",
    "DRUG INTERACTION: Must not be given with theophylline (aminophylline) - risk of serious adverse reactions"
  ],
  
  "moreInformation": {
    "neonatalWarning": {
      "title": "⚠️ NEONATAL SAFETY WARNING",
      "warning": "Erythromycin is STRONGLY associated with infantile hypertrophic pyloric stenosis, especially in neonates",
      "safeIndications": [
        "Chlamydia conjunctivitis",
        "Chlamydia pneumonia",
        "Pertussis (whooping cough)"
      ],
      "unsafeUses": [
        "DO NOT use for routine neonatal pneumonia",
        "DO NOT use for neonatal sepsis"
      ],
      "source": "Guideline for Neonatal Care, Tanzania 2019"
    },
    "drugInteraction": {
      "title": "⚠️ SERIOUS DRUG INTERACTION",
      "interaction": "Must NOT be given with theophylline (aminophylline)",
      "risk": "Risk of serious adverse reactions including cardiac arrhythmias and seizures",
      "mechanism": "Erythromycin inhibits metabolism of theophylline, leading to toxic levels",
      "recommendation": "Choose alternative antibiotic if patient is on theophylline/aminophylline"
    }
